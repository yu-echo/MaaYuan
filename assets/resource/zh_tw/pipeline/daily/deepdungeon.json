{
  "地宫扫荡启动": {
    "next": ["开始寻找地宫层数"],
    "interrupt": ["进入界面-地宫"]
  },
  "开始寻找地宫层数": {
    "recognition": "TemplateMatch",
    "template": "mainmap/deepdungeon.png",
    "roi": [531, 44, 52, 68],
    "next": ["找到指定地宫层数", "已在地宫顶端"],
    "interrupt": ["下滑-主线故事-整屏"]
  },
  "已在地宫顶端": {
    "recognition": "TemplateMatch",
    "template": "deepdungeon/dd1.png",
    "roi": [501, 519, 57, 115],
    "focus": true,
    "focus_tip": "未找到指定层数，任务中止",
    "next": ["stop"]
  },
  "找到指定地宫层数": {
    "recognition": "TemplateMatch",
    "template": "deepdungeon/dd38.png",
    "roi": [51, 327, 644, 905],
    "threshold": 0.9,
    "order_by": "Score",
    "pre_delay": 200,
    "action": "Click",
    "next": ["扫荡指定地宫层数"],
    "on_error": ["找到指定地宫层数"],
    "timeout": 2000
  },
  "扫荡指定地宫层数": {
    "recognition": "TemplateMatch",
    "template": "deepdungeon/quickfight.png",
    "roi": [190, 876, 151, 64],
    "pre_delay": 500,
    "action": "Click",
    "next": ["洛阳铲不足check", "扫荡确认"]
  },
  "扫荡确认": {
    "recognition": "TemplateMatch",
    "template": "deepdungeon/rewards.png",
    "roi": [68, 108, 589, 453],
    "pre_delay": 200,
    "action": "Click",
    "target": [49, 98, 51, 37],
    "next": ["找到指定地宫层数"],
    "post_delay": 2000
  }
}
